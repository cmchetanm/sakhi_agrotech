<div class="container mt-4">
  <!-- Hero Section -->
  <div class="text-center py-5">
    <h1 class="display-4 text-success">Innovating the Future of Rural Agriculture</h1>
    <p class="lead">Partnering with nature, science, and communities to create a greener tomorrow.</p>
    <%= link_to 'Our Projects', projects_path, class: 'btn btn-success btn-lg' %>
  </div>

  <!-- Image Carousel -->
    <div id="agroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
        <%= image_tag "agri1.jpg.webp", class: "d-block w-100 carousel-img", alt: "Slide 1" %>
        </div>
        <div class="carousel-item">
        <%= image_tag "agri2.jpg", class: "d-block w-100 carousel-img", alt: "Slide 2" %>
        </div>
        <div class="carousel-item">
        <%= image_tag "agri3.jpg.webp", class: "d-block w-100 carousel-img", alt: "Slide 3" %>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#agroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#agroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
    </div>

